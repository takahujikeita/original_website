    width: 100vw; /* ビューポートの横幅を100%に設定 */
}

.list-arrow div {
    position: relative;
    width: 100vw; /* ビューポートの横幅を100%に設定 */
    background-color: #A2D6F9;
    padding: 1em;
    margin-bottom: 1em;
    text-align: center;
    color: #fff;
    height: 30rem;
    box-sizing: border-box; /* paddingを含めたサイズ調整 */
}

.list-arrow div:after {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    bottom: -10px;
    left: 50%; /* 中央に配置 */
